---
export interface Props {
  title?: string;
  description?: string;
}
const { title = 'Triton Pickleball', description = 'UC San Diego Pickleball Club' } = Astro.props as Props;
import '../styles/global.css';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" href={`${import.meta.env.BASE_URL}favicon.svg`} type="image/svg+xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="canonical" href={`https://triton-pickleball.github.io/pbwebsite/`} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`https://triton-pickleball.github.io/pbwebsite/`} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <script defer data-domain="triton-pickleball.github.io" src="https://plausible.io/js/script.js"></script>
    <header class="glass-card sticky top-0 z-50 border-b border-white/20">
      <nav class="container-fluid flex items-center justify-between py-6">
        <a href={import.meta.env.BASE_URL} class="flex items-center gap-4 group">
          <div class="relative">
            <img src={`${import.meta.env.BASE_URL}logo.svg`} alt="Triton Pickleball" class="h-10 w-auto transition-transform duration-200 group-hover:scale-105" />
            <div class="absolute -inset-1 bg-gradient-to-r from-primary-400 to-accent-400 rounded-lg blur opacity-30 group-hover:opacity-50 transition-opacity duration-200"></div>
          </div>
          <span class="text-2xl font-bold gradient-text">Triton Pickleball</span>
        </a>
        <ul class="hidden md:flex items-center gap-8 text-sm font-medium">
          <li><a href={`${import.meta.env.BASE_URL}about`} class="hover:text-primary-600 transition-colors duration-200">About</a></li>
          <li><a href={`${import.meta.env.BASE_URL}events`} class="hover:text-primary-600 transition-colors duration-200">Schedule</a></li>
          <li><a href={`${import.meta.env.BASE_URL}teams`} class="hover:text-primary-600 transition-colors duration-200">Teams</a></li>
          <li><a href={`${import.meta.env.BASE_URL}join`} class="btn-primary">Join</a></li>
        </ul>
      </nav>
    </header>
    <main class="min-h-[70vh]">
      <slot />
    </main>
    <footer class="mt-20 bg-gradient-to-r from-neutral-900 to-primary-900 text-white">
      <div class="container-fluid py-16 grid md:grid-cols-3 gap-12">
        <div>
          <div class="flex items-center gap-4 mb-6">
            <div class="h-10 w-10 rounded-xl bg-gradient-to-r from-primary-500 to-accent-500 flex items-center justify-center">
              <span class="text-white font-bold text-lg">T</span>
            </div>
            <span class="text-xl font-bold">Triton Pickleball</span>
          </div>
          <p class="text-neutral-300 max-w-sm leading-relaxed">UC San Diego's premier pickleball community. All students welcome, beginners encouraged to join our inclusive and competitive environment.</p>
        </div>
        <div>
          <div class="font-semibold mb-6 text-lg">Quick Links</div>
          <ul class="space-y-3">
            <li><a href={`${import.meta.env.BASE_URL}about`} class="text-neutral-300 hover:text-white transition-colors duration-200">About</a></li>
            <li><a href={`${import.meta.env.BASE_URL}events`} class="text-neutral-300 hover:text-white transition-colors duration-200">Schedule</a></li>
            <li><a href={`${import.meta.env.BASE_URL}teams`} class="text-neutral-300 hover:text-white transition-colors duration-200">Teams</a></li>
            <li><a href={`${import.meta.env.BASE_URL}join`} class="text-neutral-300 hover:text-white transition-colors duration-200">Join</a></li>
          </ul>
        </div>
        <div>
          <div class="font-semibold mb-6 text-lg">Connect</div>
          <ul class="space-y-3">
            <li><a href="https://www.instagram.com/triton.pickleball/" rel="noopener noreferrer" target="_blank" class="text-neutral-300 hover:text-white transition-colors duration-200">Instagram</a></li>
            <li><a href="https://discord.gg/5Jsz8rKStg" rel="noopener noreferrer" target="_blank" class="text-neutral-300 hover:text-white transition-colors duration-200">Discord</a></li>
            <li><a href="mailto:club@example.com" class="text-neutral-300 hover:text-white transition-colors duration-200">Email</a></li>
          </ul>
        </div>
      </div>
      <div class="border-t border-neutral-700 py-8 text-center text-sm text-neutral-400">
        Â© {new Date().getFullYear()} UC San Diego Triton Pickleball. Not affiliated with UC Regents.
      </div>
    </footer>
  </body>
  </html>


