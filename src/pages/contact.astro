---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Contact — Triton Pickleball" description="Contact officers or reach us on social for UCSD Triton Pickleball.">
  <section class="container-fluid py-16">
    <h1 class="text-4xl font-extrabold">Contact</h1>
    <p class="mt-4 text-white/85 max-w-prose">Questions, partnerships, or press? Reach out and we’ll get back to you.</p>
    <div class="mt-8 grid md:grid-cols-2 gap-6">
      <form class="rounded-xl border border-white/10 bg-white/5 p-6 space-y-4">
        <div>
          <label class="block text-sm text-white/80">Name</label>
          <input class="mt-1 w-full rounded-md bg-white/10 border border-white/20 px-3 py-2 outline-none focus:ring-2 focus:ring-triton-yellow/70" placeholder="Your name" />
        </div>
        <div>
          <label class="block text-sm text-white/80">Email</label>
          <input type="email" class="mt-1 w-full rounded-md bg-white/10 border border-white/20 px-3 py-2 outline-none focus:ring-2 focus:ring-triton-yellow/70" placeholder="you@ucsd.edu" />
        </div>
        <div>
          <label class="block text-sm text-white/80">Message</label>
          <textarea class="mt-1 w-full rounded-md bg-white/10 border border-white/20 px-3 py-2 h-32 outline-none focus:ring-2 focus:ring-triton-yellow/70" placeholder="How can we help?" />
        </div>
        <button type="button" class="btn-primary">Send</button>
      </form>
      <div class="rounded-xl border border-white/10 bg-white/5 p-6">
        <div class="font-semibold">Social</div>
        <ul class="mt-3 space-y-2 text-white/85">
          <li><a href="https://www.instagram.com/triton.pickleball/" rel="noopener noreferrer" target="_blank">Instagram</a></li>
          <li><a href="https://discord.gg/5Jsz8rKStg" rel="noopener noreferrer" target="_blank">Discord</a></li>
          <li><a href="mailto:club@example.com">Email</a></li>
        </ul>
      </div>
    </div>
  </section>
</BaseLayout>


