---
import BaseLayout from '../layouts/BaseLayout.astro';
import { joinPageData, getFullUrl } from '../data/join';
---
<BaseLayout title="Join — Triton Pickleball" description="Become a member of UCSD's Triton Pickleball club.">
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-primary-50 via-white to-accent-50">
    <div class="container-fluid">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          <span class="gradient-text">Join</span> <span class="text-neutral-800">the Club</span>
        </h1>
        <p class="text-xl text-neutral-600 leading-relaxed">
          Ready to become part of UCSD's premier pickleball community? Follow these simple steps to get started.
        </p>
      </div>
    </div>
  </section>

  <!-- Steps Section -->
  <section class="py-20">
    <div class="container-fluid">
      <div class="max-w-4xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-4xl font-bold text-neutral-800 mb-8">How to Join</h2>
            <div class="space-y-6">
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-primary-500 to-primary-600 rounded-full flex items-center justify-center text-white font-bold">1</div>
                <div>
                  <h3 class="font-bold text-lg text-neutral-800 mb-2">Join Our Community</h3>
                  <p class="text-neutral-600">Join our Discord for partner-matching and latest updates</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-accent-500 to-accent-600 rounded-full flex items-center justify-center text-white font-bold">2</div>
                <div>
                  <h3 class="font-bold text-lg text-neutral-800 mb-2">Practice the 3 Skills </h3>
                  <p class="text-neutral-600">Practice your Drives, Dinks, and Drops. These are the main skills we look for in tryouts.</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-primary-500 to-accent-500 rounded-full flex items-center justify-center text-white font-bold">3</div>
                <div>
                  <h3 class="font-bold text-lg text-neutral-800 mb-2">Sign up for Tryouts</h3>
                  <p class="text-neutral-600">Fill out our tryout form and attend tryouts. Keep an eye out for information on our Instagram.</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-accent-500 to-accent-600 rounded-full flex items-center justify-center text-white font-bold">4</div>
                <div>
                  <h3 class="font-bold text-lg text-neutral-800 mb-2">Start Playing</h3>
                  <p class="text-neutral-600">Check our Discord partner-matching and Instagram chats to find people to play with!</p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="glass-card rounded-3xl p-8">
            <h3 class="text-2xl font-bold text-neutral-800 mb-6">Ready to Get Started?</h3>
            <div class="space-y-4">
              <a href={joinPageData.tryoutForm.url} target="_blank" rel="noopener noreferrer" class="btn-primary w-full text-center block">
                {joinPageData.tryoutForm.text}
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </a>
              <a href={getFullUrl(joinPageData.scheduleLink.url, import.meta.env.BASE_URL)} class="btn-secondary w-full text-center block">
                {joinPageData.scheduleLink.text}
              </a>
            </div>
            <div class="mt-8 p-6 bg-gradient-to-r from-primary-50 to-accent-50 rounded-2xl">
              <h4 class="font-bold text-neutral-800 mb-2">Benefits of Membership</h4>
              <ul class="text-sm text-neutral-600 space-y-1">
                <li>• Access to private practices and events</li>
                <li>• Priority Equipment Access</li>
                <li>• Member-only discounts</li>
                <li>• Comp Team Opportunity</li>
                <li>• Build community and make connections</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>


