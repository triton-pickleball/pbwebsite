import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Schedule â€” Triton Pickleball" description="Practices, socials, tournaments, and meetings for UCSD Triton Pickleball.">
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-primary-50 via-white to-accent-50">
    <div class="container-fluid">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          <span class="gradient-text">Schedule</span> <span class="text-neutral-800">& Events</span>
        </h1>
        <p class="text-xl text-neutral-600 leading-relaxed">
          Check the calendar for practices, socials, and tournaments. Times may change due to weather or facility updates.
        </p>
      </div>
    </div>
  </section>

  <!-- Calendar Section -->
  <section class="py-20">
    <div class="container-fluid">
      <div class="glass-card rounded-3xl p-8 shadow-2xl">
        <iframe
          src="https://calendar.google.com/calendar/embed?src=df6819deb673336c6b24e1b94355335c4a5df4b769fc58d9b8e18c35aba1ff52%40group.calendar.google.com&ctz=America%2FLos_Angeles"
          style="border:0"
          width="100%"
          height="600"
          frameborder="0"
          scrolling="no"
          class="rounded-2xl"
        />
      </div>
    </div>
  </section>
</BaseLayout>


