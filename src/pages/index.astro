---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Triton Pickleball ‚Äî UC San Diego" description="Join UCSD's Triton Pickleball club. All skill levels welcome.">
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary-50 via-white to-accent-50"></div>
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%230ea5e9" fill-opacity="0.05"%3E%3Ccircle cx="30" cy="30" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-40"></div>
    
    <div class="container-fluid relative z-10">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="animate-slide-up">
          <h1 class="text-5xl md:text-7xl font-bold leading-tight mb-6">
            <span class="gradient-text">Triton</span><br>
            <span class="text-neutral-800">Pickleball</span>
          </h1>
          <p class="text-xl text-neutral-600 mb-8 leading-relaxed max-w-lg">
            UC San Diego's premier pickleball community. Learn, compete, and connect with players of all skill levels in our inclusive environment.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href={`${import.meta.env.BASE_URL}join`} class="btn-primary text-lg px-8 py-4">
              Join the Club
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>
            <a href={`${import.meta.env.BASE_URL}events`} class="btn-secondary text-lg px-8 py-4">
              View Schedule
            </a>
          </div>
        </div>
        
        <div class="relative animate-fade-in">
          <div class="relative z-10">
            <div class="aspect-[4/3] rounded-3xl glass-card overflow-hidden shadow-2xl">
              <img src={`${import.meta.env.BASE_URL}PBCourt_Closeup.jpg`} alt="Triton Pickleball at UC San Diego" class="h-full w-full object-cover" loading="eager" />
            </div>
          </div>
          <div class="absolute -top-4 -right-4 w-24 h-24 bg-gradient-to-r from-accent-400 to-accent-500 rounded-full blur-xl opacity-60 floating"></div>
          <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-gradient-to-r from-primary-400 to-primary-500 rounded-full blur-xl opacity-40 floating" style="animation-delay: 1s;"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-20 bg-white/50 backdrop-blur-sm">
    <div class="container-fluid">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-neutral-800 mb-4">Join Our Community</h2>
        <p class="text-xl text-neutral-600 max-w-2xl mx-auto">Be part of UCSD's fastest-growing sports community</p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="glass-card rounded-2xl p-8 text-center group hover:scale-105 transition-transform duration-300">
          <div class="text-5xl font-bold gradient-text mb-2">200+</div>
          <div class="text-neutral-600 font-medium">Active Members</div>
          <div class="w-16 h-1 bg-gradient-to-r from-primary-500 to-accent-500 mx-auto mt-4 rounded-full"></div>
        </div>
        <div class="glass-card rounded-2xl p-8 text-center group hover:scale-105 transition-transform duration-300">
          <div class="text-5xl font-bold gradient-text mb-2">8+</div>
          <div class="text-neutral-600 font-medium">Pickleball Courts</div>
          <div class="w-16 h-1 bg-gradient-to-r from-primary-500 to-accent-500 mx-auto mt-4 rounded-full"></div>
        </div>
        <div class="glass-card rounded-2xl p-8 text-center group hover:scale-105 transition-transform duration-300">
          <div class="text-4xl font-bold gradient-text mb-2">Expanding</div>
          <div class="text-neutral-600 font-medium">Competitive Teams</div>
          <div class="w-16 h-1 bg-gradient-to-r from-primary-500 to-accent-500 mx-auto mt-4 rounded-full"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Upcoming Events Section -->
  <section class="py-20">
    <div class="container-fluid">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-neutral-800 mb-4">Upcoming Events</h2>
        <p class="text-xl text-neutral-600 max-w-2xl mx-auto">Stay updated with our latest practices, tournaments, and social events</p>
      </div>
      
      <!-- Events List Container -->
      <div class="max-w-4xl mx-auto" id="events-container">
        <!-- Loading state -->
        <div id="events-loading" class="text-center py-8">
          <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-500"></div>
          <p class="mt-2 text-neutral-600">Loading events...</p>
        </div>
        
        <!-- Events will be populated here by JavaScript -->
        <div id="events-list" class="space-y-4 hidden">
          <!-- Dynamic events will be inserted here -->
        </div>
        
        <!-- Fallback content if no events -->
        <div id="events-fallback" class="hidden text-center py-8">
          <p class="text-neutral-600">No upcoming events scheduled. Check back soon!</p>
        </div>
      </div>
    </div>
  </section>

  <script>
    // Fetch and display events
    async function loadEvents() {
      const loadingEl = document.getElementById('events-loading');
      const eventsListEl = document.getElementById('events-list');
      const fallbackEl = document.getElementById('events-fallback');
      
      try {
        const response = await fetch('/api/events');
        const events = await response.json();
        
        loadingEl.classList.add('hidden');
        
        if (events && events.length > 0) {
          eventsListEl.classList.remove('hidden');
          eventsListEl.innerHTML = events.map(event => createEventCard(event)).join('');
        } else {
          fallbackEl.classList.remove('hidden');
        }
      } catch (error) {
        console.error('Error loading events:', error);
        loadingEl.classList.add('hidden');
        fallbackEl.classList.remove('hidden');
      }
    }
    
    function createEventCard(event) {
      const eventDate = new Date(event.start);
      const month = eventDate.toLocaleDateString('en-US', { month: 'short' }).toUpperCase();
      const day = eventDate.getDate();
      const timeRange = `${event.startTime} - ${event.endTime}`;
      
      return `
        <div class="bg-neutral-50 rounded-2xl p-6 hover:bg-neutral-100 transition-colors duration-200">
          <div class="flex items-start gap-6">
            <!-- Date Block -->
            <div class="bg-neutral-800 text-white rounded-xl p-4 text-center min-w-[80px] flex-shrink-0">
              <div class="text-sm font-medium uppercase tracking-wide">${month}</div>
              <div class="text-3xl font-bold mt-1">${day}</div>
            </div>
            
            <!-- Event Details -->
            <div class="flex-1">
              <h3 class="font-bold text-xl text-neutral-800 mb-2">${event.title}</h3>
              ${event.description ? `<p class="text-neutral-600 mb-3">${event.description}</p>` : ''}
              ${event.location ? `<p class="text-sm text-neutral-500 mb-3">üìç ${event.location}</p>` : ''}
              
              <!-- Time Badge -->
              <div class="inline-flex items-center gap-2 bg-neutral-200 text-neutral-700 px-3 py-2 rounded-full text-sm">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                ${timeRange}
              </div>
            </div>
          </div>
        </div>
      `;
    }
    
    // Load events when the page loads
    document.addEventListener('DOMContentLoaded', loadEvents);
  </script>
</BaseLayout>


